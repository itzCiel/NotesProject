@model List<Note>

@{
    ViewData["Title"] = "Recycle Bin";
}

<h1 class="mb-3">Recycle Bin</h1>

@if(Model.Any()){
    <table class="table table-striped table-hover mt-2">
        <thead>
            <tr>
                <th class="text-center">Note </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var n in Model)
            {
                <tr>
                    <td>@n.Title.ReduceLength(50)</td>
                    <td class="d-flex flex-row justify-content-center">
                        <form asp-action="Recycle" asp-route-id="@n.Id">
                            <button class="btn btn-success" title="Undo Delete"><i class="fas fa-recycle"></i></button>
                        </form>
                        <a asp-action="Delete" class="btn btn-danger ml-2" asp-route-id="@n.Id"><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <p class="text-center">No Notes here.</p>
}
