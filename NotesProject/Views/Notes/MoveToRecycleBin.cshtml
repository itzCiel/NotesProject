@model NotesProject.Models.Note

@{
    ViewData["Title"] = "Move to Recycle bin";
}

<h1>Move to Recycle bin</h1>

<h3>Are you sure you want to move <span class="text-info"> @Model.Title </span> to Recycle bin ?</h3>

<div>
    <form asp-action="MoveToRecycleBin">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
